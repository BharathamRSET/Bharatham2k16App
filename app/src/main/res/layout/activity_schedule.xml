<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="josephvarghese.roundmelon.dell.bharathamone.Schedule">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Date"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18 August,Thursday"
        android:id="@+id/btn18"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:textSize="30dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19 august,friday"
        android:id="@+id/btn19"
        android:layout_below="@+id/btn18"
        android:layout_alignLeft="@+id/btn18"
        android:layout_alignStart="@+id/btn18"
        android:layout_alignRight="@+id/btn18"
        android:layout_alignEnd="@+id/btn18"
        android:textSize="30dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 August,Saturday"
        android:id="@+id/btn20"
        android:layout_below="@+id/btn19"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        />
</RelativeLayout>
